<Window x:Class="AIFaceDrawing.BugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIFaceDrawing"
        mc:Ignorable="d"
        Title="BugWindow" Height="300" Width="300">
    <Grid>
        <TextBox Name="tb" Width="300" Height="200" IsReadOnly="True" TextWrapping="Wrap"></TextBox>
        <Button Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="Clear_Click">Clear</Button>
    </Grid>
</Window>
