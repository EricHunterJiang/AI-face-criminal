<Window x:Class="AIFaceDrawing.GenderWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIFaceDrawing"
        mc:Ignorable="d"
        Title="GenderWin" Height="300" Width="300" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Width="300" Height="100" TextWrapping="WrapWithOverflow" IsReadOnly="True" FontSize="20">Please select the gender of the criminal: Male or Female</TextBox>
        <Button Grid.Row="1" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Click="Male_Click">Male</Button>
        <Button Grid.Row="1" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" Click="Female_Click">Female</Button>
    </Grid>
</Window>
