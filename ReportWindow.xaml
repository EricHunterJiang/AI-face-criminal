<Window x:Class="AIFaceDrawing.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIFaceDrawing"
        mc:Ignorable="d"
        Title="ReportWindow" Height="500" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Width="150" Height="30" HorizontalAlignment="Center">Criminal Report Detail</Label>
        <DocumentViewer Grid.Row="1" Name="docViewer" Width="485" Height="400"></DocumentViewer>
        <Button Grid.Row="2" Width="50" Height="30" HorizontalAlignment="Right" Margin="0,0,150,0" Click="Submit_Click">Submit</Button>
        <Button Grid.Row="2" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,20,0" Click="Contact_Click">Contact Witness</Button>
        
    </Grid>
</Window>
